<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f2f5"
    tools:context="com.example.khawaja_maintenance.SignUp">


    <EditText

        android:id="@+id/edt_userPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/round_edittext"
        android:drawableLeft="@drawable/lockblack"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:password="true"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/user_sign_up_btn"
        app:layout_constraintEnd_toEndOf="@+id/user_sign_up_btn"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/user_sign_up_btn"
        app:layout_constraintTop_toBottomOf="@+id/edt_userEmail" />

    <ImageView

        android:id="@+id/user_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/user_txt"
        app:layout_constraintEnd_toEndOf="@+id/user_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/user_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_two" />

    <EditText

        android:id="@+id/edt_userEmail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/round_edittext"
        android:ems="10"
        android:drawableLeft="@drawable/personblack"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:textSize="12sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:layout_constraintBottom_toTopOf="@+id/edt_userPassword"
        app:layout_constraintEnd_toEndOf="@+id/edt_userPassword"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edt_userPassword"
        app:layout_constraintTop_toBottomOf="@+id/user_txt" />

    <TextView

        android:id="@+id/user_txt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="User"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#616161"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_userEmail"
        app:layout_constraintEnd_toEndOf="@+id/edt_userEmail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/edt_userEmail"
        app:layout_constraintTop_toBottomOf="@+id/user_img" />

    <Button

        android:id="@+id/user_sign_up_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_userPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>